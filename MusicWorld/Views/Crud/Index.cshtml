
@model MusicWorld.Models.ViewModel.AlbumViewModel
@{
    ViewData["Title"] = "Quan Ly";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Albums[0].AlbumId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums[0].ImgAlbum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums[0].AlbumName)
            </th>         
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Albums)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImgAlbum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumName)
                </td>            
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlbumId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AlbumId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AlbumId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

