<environment>
    <link rel="stylesheet" href="~/css/Artist.css" />
</environment>
@model IQueryable<Artist>
<div class="casihot">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="bvh-h2-title" style="margin-top: 50px ;">
                    <h1 class="text-center">Việt Nam</h1>
                </h2>
            </div>
        </div>
        @foreach (var p in Model)
        {
            <div class="float-left">
                <div class="wrapper">
                    <div class="col-album-circle">
                        <div class="img-container">
                            <a href="DetailArtist/ArtistId=@p.ArtistId">
                                <img src="@p.ImgUrl">
                            </a>
                        </div>
                    </div>
                    <div class="bvh-item">
                        <div class="bvh-item-info">
                            <h6 class="bvh-item-h3 text-center"><a href="DetailArtist/ArtistId=@p.ArtistId">@p.ArtistName</a></h6>
                            <p class="bvh-item-singer text-center ">72K quan tâm</p>
                        </div>
                    </div>
                </div>               
            </div>
        }
    </div>
</div>