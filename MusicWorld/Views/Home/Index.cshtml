@using MusicWorld.Models.ViewModels
@model TrackListViewModel
<div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://photo-zmp3.zadn.vn/banner/9/9/2/1/9921e3ee398591be4257690e0963ab7c.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://photo-zmp3.zadn.vn/banner/5/3/9/3/53936fffc857745b9f3dada0943ddbcd.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://photo-zmp3.zadn.vn/banner/6/5/3/3/6533b6b78a4c40e6b86cc5b84c566391.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<section>
    <div class="container">
        <div class="row">
            <div class="col-3 list-group" id="list-tab" role="tablist">
                <div class="row">
                    <vc:navigation-menu />
                </div>
            </div>
            <div class="col-9">
                <div class="row">
                    <div class="album" style="margin-left:26px;">
                        @foreach (var p in Model.Tracks)
                        {
                            <div class="col-md-5ths ">
                                <a href="#">
                                    <div class="bvh-item-lnk d-block position-relative">
                                        <img class="bvh-item-bg animated fadeInDown" style="position: absolute;z-index: 1; margin-top:4px;" src="img/project1.png">
                                        <img effect="opacity" class="bvh-item-img animated fadeInDown2" style="position: relative;z-index: 2" src="@p.UrlImg">
                                    </div>
                                </a>
                                <div class="bvh-item">
                                    <div class="bvh-item-info">
                                        <h6 class="bvh-item-h3 text-center"><a href="#">@p.TrackName</a></h6>
                                        <p class="bvh-item-singer author_show text-center text-truncate">Shawn Mendes</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div page-model="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
                         page-class="btn" page-class-normal="btn-light"
                         page-class-selected="btn-primary"
                         page-url-category="@Model.CurrentGenre"
                         class="btn-group justify-content-center m-auto">

                    </div>
                </div>            

            </div>
        </div>

    </div>
   
</section>
